{
    "compilerOptions": {
        "lib": ["ESNext", "DOM", "DOM.Iterable"],
        "allowJs": true,
        "skipLibCheck": true,
        "stripInternal": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "esModuleInterop": true,
        "moduleResolution": "Node",
        "isolatedModules": true,
        "target": "ES2017",
        "module": "ESNext",
        "noEmit": true,
        "sourceMap": false,
        "declaration": false,
        "downlevelIteration": true,
        "removeComments": true,
        "baseUrl": "./src"
    },
    "include": ["src", "src/**/*.ts"],
    "exclude": ["node_modules"]
}